  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}/services/payroll/",
      "type": "node",
      "request": "launch",
      "name": "Launch Payroll",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/services/payroll/index.ts",
      "preLaunchTask": "tsc: build - services/payroll/tsconfig.json",
      "outFiles": ["${workspaceFolder}/services/payroll/build/**/*.js"]
    },
    {
      "cwd": "${workspaceFolder}/server/",
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/index.ts",
      "preLaunchTask": "tsc: build - server/tsconfig.json",
      "outFiles": ["${workspaceFolder}/server/build/**/*.js"]
    }
  ]
}
